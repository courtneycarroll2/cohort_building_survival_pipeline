{
    "name": "LUAD_TP53_mutation_T2",
    "description": "TCGA LUAD patients with TP53 mutations and T stage 2/2a/2b",
    "cancer_type": "LUAD",

    "clinical_criteria": [
        {
            "field": "pathologic_T",
            "logic": "in",
            "value": ["T2", "T2a", "T2b"]
        }

    ],

    "genomic_criteria": [
        {
            "field": "TP53",
            "logic": "equals",
            "value": 1
        }
    ],

    "model":
    {
        "time_start": "days_to_initial_pathologic_diagnosis",
        "time_end_event": "days_to_death",
        "time_end_censor": "days_to_last_followup",

        "subset": 
        {
            "field": "tobacco_smoking_history_indicator",
            "type": "categorical",
            "group":
            {
                "0": ["Lifelong Non-smoker"],
                "1": ["Current reformed smoker for < or = 15 years", "Current reformed smoker for > 15 years", "Current smoker"]
            }
        },

        "covars": [
            {
                "field": "age_at_initial_pathologic_diagnosis",
                "type": "numeric",
                "ds": "clinical"
            } ,

            {
                "field": "gender",
                "type": "categorical",
                "ds": "clinical"
            },

            {
                "field": "pathologic_M",
                "type": "categorical",
                "ds": "clinical",
                "exclude": ["MX"],
                "group": 
                {
                    "0": ["M0"],
                    "1": ["M1", "M1a", "M1b"]
                }
            },

            {
                "field": "pathologic_N",
                "type": "categorical",
                "ds": "clinical",
                "exclude": ["NX"],
                "group": 
                {
                    "0": ["N0"],
                    "1": ["N1", "N2", "N3"]
                }
            }
        ]
    },

    "qc": {
        "proportion_missing_rm_variable": 0.2
    }

}